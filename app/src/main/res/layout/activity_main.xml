<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jediarstudios.fagt.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pubgwp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="29dp">

        <Button
            android:id="@+id/btnSave"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:alpha="0.5"
            android:background="@drawable/ic_save"
            android:elevation="0dp" />

        <Button
            android:id="@+id/btnRevert"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btnSave"
            android:layout_marginStart="20dp"
            android:alpha="0.5"
            android:background="@drawable/ic_reset"
            android:elevation="0dp" />

        <Button
            android:id="@+id/btnInfo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_margin="20dp"
            android:alpha="0.5"
            android:background="@drawable/ic_info"
            android:elevation="0dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btnBuild"
            android:orientation="vertical"
            android:weightSum="5">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_weight="1"
                ads:srcCompat="@drawable/pubgmctlogo" />

            <Button
                android:id="@+id/btnDonate"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="-15dp"
                android:layout_marginTop="-15dp"
                android:background="#00000000"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Click here to Donate for BAGT"
                android:visibility="invisible" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="50dp"
                android:layout_weight="1"
                android:background="@drawable/transpanel"
                android:overScrollMode="ifContentScrolls"
                android:paddingBottom="30dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="20dp"
                android:scrollbarStyle="insideOverlay">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/btnBuild"
                        android:layout_alignParentTop="true"
                        android:layout_weight="1"
                        android:isScrollContainer="true"
                        android:orientation="horizontal"
                        android:overScrollMode="always"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/googlesansregular"
                                android:gravity="center_horizontal"
                                android:padding="10dp"
                                android:text="Graphics quality" />

                            <Spinner
                                android:id="@+id/sprGraphicsQuality"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginBottom="10dp"
                                android:gravity="center_horizontal"
                                android:padding="10dp"
                                android:textAlignment="center" />

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:fontFamily="@font/googlesansregular"
                                android:gravity="center_horizontal"
                                android:padding="10dp"
                                android:text="Resolution" />

                            <Spinner
                                android:id="@+id/sprResolution"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginBottom="10dp"
                                android:gravity="center_horizontal"
                                android:padding="10dp"
                                android:textAlignment="center" />

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:fontFamily="@font/googlesansregular"
                                android:gravity="center_horizontal"
                                android:padding="10dp"
                                android:text="Color style" />

                            <Spinner
                                android:id="@+id/sprColor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginBottom="10dp"
                                android:gravity="center_horizontal"
                                android:padding="10dp"
                                android:textAlignment="center" />

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:fontFamily="@font/googlesansregular"
                                android:gravity="center_horizontal"
                                android:padding="10dp"
                                android:text="Frame rate" />

                            <Spinner
                                android:id="@+id/sprFps"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginBottom="10dp"
                                android:gravity="center_horizontal"
                                android:padding="10dp"
                                android:textAlignment="center" />

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:fontFamily="@font/googlesansregular"
                                android:gravity="center_horizontal"
                                android:padding="10dp"
                                android:text="Light effects" />

                            <Spinner
                                android:id="@+id/sprLightFx"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginBottom="10dp"
                                android:gravity="center_horizontal"
                                android:padding="10dp"
                                android:textAlignment="center" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView9"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/googlesansregular"
                                android:gravity="center_horizontal"
                                android:padding="10dp"
                                android:text="Shadow quality" />

                            <Spinner
                                android:id="@+id/sprShadowQuality"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginBottom="10dp"
                                android:gravity="center_horizontal"
                                android:padding="10dp"
                                android:textAlignment="center" />

                            <TextView
                                android:id="@+id/textView10"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:fontFamily="@font/googlesansregular"
                                android:gravity="center_horizontal"
                                android:padding="10dp"
                                android:text="Shadow render distance" />

                            <Spinner
                                android:id="@+id/sprShadowDistance"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginBottom="10dp"
                                android:gravity="center_horizontal"
                                android:padding="10dp"
                                android:textAlignment="center" />

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:fontFamily="@font/googlesansregular"
                                android:gravity="center_horizontal"
                                android:padding="10dp"
                                android:text="Rendering quality" />

                            <Spinner
                                android:id="@+id/sprRender"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginBottom="10dp"
                                android:gravity="center_horizontal"
                                android:padding="10dp"
                                android:textAlignment="center" />

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:fontFamily="@font/googlesansregular"
                                android:gravity="center_horizontal"
                                android:padding="10dp"
                                android:text="Anti aliasing (Msaa)" />

                            <Spinner
                                android:id="@+id/sprMsaa"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginBottom="10dp"
                                android:gravity="center_horizontal"
                                android:padding="10dp"
                                android:textAlignment="center" />

                            <TextView
                                android:id="@+id/textView25"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:fontFamily="@font/googlesansregular"
                                android:gravity="center_horizontal"
                                android:padding="10dp"
                                android:text="Graphics API"
                                android:visibility="gone" />

                            <Spinner
                                android:id="@+id/sprGraphApi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginBottom="10dp"
                                android:gravity="center_horizontal"
                                android:padding="10dp"
                                android:textAlignment="center"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/textView29"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:fontFamily="@font/googlesansregular"
                                android:gravity="center_horizontal"
                                android:padding="10dp"
                                android:text="Texture quality" />

                            <Spinner
                                android:id="@+id/sprTextureQuality"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginBottom="10dp"
                                android:gravity="center_horizontal"
                                android:padding="10dp"
                                android:textAlignment="center" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btnBuild"
            android:layout_alignParentStart="true"
            android:layout_marginStart="36dp"
            android:text="Version"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnBuild"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="10dp"
            android:background="#46000000"
            android:fontFamily="@font/googlesansmedium"
            android:text="Apply" />

        <Spinner
            android:id="@+id/sprVersion"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btnBuild"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="3dp"
            android:layout_marginStart="85dp"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:textAlignment="center" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
